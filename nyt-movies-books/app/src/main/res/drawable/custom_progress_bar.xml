<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="16dp"
        android:top="16dp">
        <layer-list>
            <item>
                <rotate
                    android:fromDegrees="0"
                    android:pivotX="50%"
                    android:pivotY="50%"
                    android:toDegrees="1080">
                    <shape android:shape="rectangle">
                        <size
                            android:width="60dp"
                            android:height="60dp" />
                        <stroke
                            android:width="4dp"
                            android:color="@color/colorPrimaryDarkBooks" />
                    </shape>
                </rotate>
            </item>
            <item>
                <rotate
                    android:fromDegrees="90"
                    android:pivotX="50%"
                    android:pivotY="50%"
                    android:toDegrees="2080">
                    <shape android:shape="rectangle">
                        <size
                            android:width="60dp"
                            android:height="60dp" />
                        <stroke
                            android:width="4dp"
                            android:color="@color/colorPrimaryDarkMovies" />
                    </shape>
                </rotate>
            </item>
        </layer-list>
    </item>
</layer-list>
 